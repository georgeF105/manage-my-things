<h1>{{title}}</h1>
<p>Welcome to {{title}}</p>

<ul>
  {{#each unsorted}}
    <li>
        {{this.name}}
        {{#if this.files.length}}
            <ul>
                {{#each this.files}}
                    <li>
                        {{this}}
                    </li>
                {{/each}}
            </ul>
        {{/if}}
    </li>
  {{/each}}
</ul>